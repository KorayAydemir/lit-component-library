{
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "target": "ES6",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~components/*": [
        "./src/components/*"
      ],
      "~src/*": [
        "./src/*"
      ]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }, { "name": "ts-lit-plugin" }]
  },
}
